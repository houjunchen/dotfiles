# This is Git's per-user configuration file.
[user]
# Please adapt and uncomment the following lines:
	name = Abner Chen
	email = houjunchen@gmail.com
[core]
    pager = delta
[color]
	ui = true
[delta]
    plus-color = "#012800"
    minus-color = "#340001"
    #syntax-theme = Monokai Extended
    syntax-theme = base16-256
    line-numbers = true
    #side-by-side = true
[diff]
    colorMoved = default
[interactive]
    diffFilter = delta --color-only
[pull]
	rebase = true
